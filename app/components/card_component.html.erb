<div class="border color-border-accent-emphasis">
  <div class="border-bottom px-3 py-2">
    <%= octicon :ruby  %>
    <%= header %>
  </div>

  <div class="p-3">
    <%= body %>
  </div>

  <% if actions? %>
    <div class="border-top px-3 py-2">
      <div class="BtnGroup">
        <% actions.each do |action| %>
          <%= action %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
